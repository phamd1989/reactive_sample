<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/primary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>

        <!-- action mode -->
        <item name="android:actionModeBackground">@color/light_heavy_gray</item>
    </style>
    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/primary</item>

        <!-- Support library compatibility -->
        <item name="background">@color/primary</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/primary</item>
    </style>
    <style name="Button"></style>

    <style name="Button.NewPosts">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/button_blue_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
